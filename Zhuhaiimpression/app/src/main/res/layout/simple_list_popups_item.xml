<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_mini_1"
    android:paddingRight="@dimen/padding_mini_1"
    android:paddingTop="@dimen/padding_tiny_3"
    android:paddingBottom="@dimen/padding_tiny_3"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/simple_list_item_selector">

    <ImageView
        android:id="@+id/simple_list_popups_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_tiny_2"
        android:src="@mipmap/ic_control_delete" />

    <TextView
        android:id="@+id/simple_list_popups_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/black_70alpha"
        android:singleLine="true" />

</LinearLayout>